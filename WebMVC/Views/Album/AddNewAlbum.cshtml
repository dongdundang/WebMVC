@model DTO.Album

@{
    ViewBag.Title = "AddNewAlbum";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center text-primary"><h2>Add New Album</h2></div>
<div class="row">
    <div class="col-6 offset-3">
        @using (Html.BeginForm("AddNewAlbum", "Album", FormMethod.Post, new { enctype = "multipart/form-data", id = "AddAlbumForm" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label>Album Name</label>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", id = "AlbumName" })
            </div>
            <div class="form-group">
                <label>Image</label>
                <input type="file" name="file" id="file" multiple />
            </div>
            <button class="btn btn-primary" onclick="validate()" type="button"><i class="fas fa-plus-circle"></i> Add Album</button>
        }
    </div>
</div>
@section Scripts{
    <script src="~/Scripts/Album/AddNewAlbum.js"></script>
}

